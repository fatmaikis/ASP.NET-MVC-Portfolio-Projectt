@model MyPortfolio.Models.TblCategories
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>Kategori Güncelleme Sayfası</h3>

<form method="post">

    <input type="hidden" name="CategoryID" value="@Model.CategoryID" class="form-control"/>
    <label>Kategori Adı</label>

   <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control" />
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>

</form>
