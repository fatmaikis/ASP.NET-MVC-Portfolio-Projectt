@model List<MyPortfolio.Models.TblExperiences>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<h3>Deneyim Sayfası</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlangıç Yılı</th>
        <th>Bitiş Yılı</th>
        <th>Pozisyon</th>
        <th>Açıklama</th>
        <th>Şirketin İsmi</th>
        <th>Şirketin Lokasyonu</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.StartYear</td>
            <td>@item.EndYear</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Company</td>
            <td>@item.Location</td>
            <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Experience/UpdateExperience/@item.ExperienceID" class="btn btn-outline-info">Güncelle</a></td>
    
        </tr>
     }

</table>
<br />

<a href="/Experience/AddExperience" class="btn btn-outline-primary">Yeni Deneyim Ekle</a>

