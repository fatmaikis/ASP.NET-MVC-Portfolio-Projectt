@model List<MyPortfolio.Models.TblSocialMedias>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<br />
<h3>Sosyal Medya Sayfası</h3>

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Sosyal Medya İsmi </td>
        <td>Url</td>
        <td>Icon</td>
        <td>Sil</td>
        <td>Güncelle</td>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.SocialMediaName</td>
            <td>@item.Url</td>
            <td>@item.Icon </td>
            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/SocialMedia/AddSocialMedia" class="btn btn-outline-primary">Yeni Sosyal Medya Ekle</a>

