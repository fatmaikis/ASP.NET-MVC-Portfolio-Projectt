@model List<MyPortfolio.Models.TblTestimonials>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<br />
<h3>Referans Sayfası</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim Url</th>
        <th>Yorum</th>
        <th>Ad Soyad</th>
        <th>Pozisyon</th>
        <th>Durum</th>
        <th>Yorum Tarihi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="width:40px; height:40px"/></td>
            <td>@item.Comment</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Status</td>
            <td>@item.CommentDate</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Testimonial/AddTestimonial" class="btn btn-outline-primary">Yeni Referans Ekle</a>
